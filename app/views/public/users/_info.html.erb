
      <table class='table'>
        <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
        <tr>
      	  <th>名前</th>
      	  <th><%= user.name %></th>
        </tr>
        <tr>
	        <th>自己紹介</th>
       	  <th><%= user.introduction %></th>
        </tr>
        <tr>
          <th>フォロー</th>
          <th>
            <%= link_to user_followings_path(user.id) do %>
              <%= user.followings.count %>
            <% end %>
          </th>
        <tr>
          <th>フォロワー</th>
          <th>
            <%= link_to user_followers_path(user.id) do %>
              <%= user.followers.count %>
            <% end %>
          </th>
        </tr>
      </table>

      <div class='row'>
        <% if user == current_user %>
          <%= link_to edit_user_path(user), class: "btn btn-secondary btn-block" do %>
          <!--前に設定していたbtn-outoline^secondaryはカーソルが触れた際に色が変わるもの。背景色変更に伴いoutlineを削除-->
            <i class="fas fa-user-cog"></i> プロフィール編集へ
          <% end %>
          <!--他のユーザーにはいいねした投稿を表示させない-->
          <%= link_to favorites_user_path(user), class: "btn btn-success btn-block" do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i> した投稿一覧へ
          <% end %>
        <% else %>
          <%= render 'public/relationships/follow_form', user: user, class: "btn btn-success" %>
        <% end %>
      </div>




