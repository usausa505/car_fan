<% if post.errors.any? %>
<div style="background-color:#FF3300; color:white;">
  <%= post.errors.count %>件のエラーが生じています:
  <ul>
    <% post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: post, local: true do |f| %>
  <div class="form-group">
    <%= f.label "画像" %>
    <%= f.file_field :images, multiple: true, class: 'form-control-file image', accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label "タイトル" %>
    <%= f.text_field :title, class: 'form-control post_title' %>
  </div>
  <div class="form-group">
    <%= f.label "本文" %>
    <%= f.text_area :body, class: 'form-control post_body' %>
  </div>
  <div class="form-group">
    <%= f.submit '投稿する', class: 'btn btn-success' %>
  </div>
<% end %>

