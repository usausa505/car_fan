<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto", style="padding-top:120px; padding-bottom:70px;">
  		<h1>投稿編集画面</h1>
  		<% if @post.errors.any? %>
        <%= @post.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

  		<%= form_with model: @post,local: true do |f| %>
  		  <div class="form-group">
          <%= f.label "画像" %>
          <%= f.file_field :images, multiple: true, class: 'form-control-file user_image', accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label "タイトル" %>
          <%= f.text_field :title, class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <%= f.label "本文" %>
          <%= f.text_area :body, class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.submit '編集する', class: 'btn btn-success' %>
        </div>
      <% end %>

  		<%= link_to '詳細画面に戻る', @post %> |
  		<%= link_to '投稿一覧に戻る', posts_path, class: "back" %>
  	</div>
  </div>
</div>