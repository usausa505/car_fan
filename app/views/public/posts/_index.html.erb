<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to(post.user) do %>
            <%= image_tag post.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= image_tag post.get_image[0], size:'80X80' %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>


      </tr>
    <% end %>
  </tbody>
</table>