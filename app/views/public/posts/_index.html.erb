<table class='table table-hover table-inverse'>
  <thead>
    <tr>
    <th>ユーザー</th>
    <th>画像</th>
    <th>タイトル</th>
    <th>本文</th>
    <th>いいね！</th>
    <th>投稿日時</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
    <!--↑上記postsはrenderのインスタンス変数で対応、以下postは|post|によって対応-->
      <tr>
        <td>
          <%= link_to user_my_page_path(post.user) do %>
            <%= image_tag post.user.get_profile_image, size:'30x30' %>
          <% end %>
        </td>
        <td>
          <% if post.images.attached? %>
            <% post.images.each_with_index do |image, i| %>
              <%= image_tag post.get_image[i], size:'50x50' %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
        <td id="favorite_buttons_<%= post.id %>"><%= render 'public/favorites/favorite', post: post %></td>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>

      </tr>
    <% end %>
    <%= paginate posts %>
  </tbody>
</table>