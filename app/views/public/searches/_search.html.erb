<div class="search_form">
  <% if user_signed_in? %>
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, class: "form-control input-group-prepend", placeholder: "キーワードを入力" %>
      <%= f.select :range, options_for_select([['ユーザー'], ['投稿']]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect"], ["前方一致","forward"],  ["後方一致","backward"], ["部分一致","partial"]]) %>
      <%= f.submit "検索", class: "btn btn-dark" %>
    <% end %>
  <% end %>
</div>