<%- if controller_name != 'sessions' %>
  <%= link_to new_session_path(resource_name), class:"btn btn-primary" do %>
    <i class="fas fa-sign-in-alt"></i> ログイン<br />
  <% end %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to new_registration_path(resource_name), class:"btn btn-success" do %>
    <i class="fas fa-user-plus"></i> 新規登録<br />
  <%end %>
<% end %>

