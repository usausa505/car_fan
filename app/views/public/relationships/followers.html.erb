<div style="padding-top:120px; padding-bottom:70px;">
  <table class="table table-hover table-inverse">
    <h1>フォロワー一覧</h1>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th>follow</th>
        <th>follower</th>
      </tr>
    </thead>
    <tbody>
      <% if @users.exists? %>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_my_page_path(user) do %>
                <%= image_tag user.get_profile_image, size: '50x50' %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.followings.count %>フォロー</td>
            <td><%= user.followers.count %>フォロワー</td>
            <td><%= render 'public/relationships/follow_form', user: user %></td>
          </tr>
        <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </tbody>
    <%= paginate @users %>
  </table>
</div>