<div class="container text-center", style="padding-top:70px; padding-bottom:70px;">
  <div class="btn-wrapper col-3 mx-auto">
    <h2><b>新規登録画面</b></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
    
      <div class="field", style="padding-top:20px;">
        <%= f.label "名前" %><br>
        <%= f.text_field :name, autocomplete: "name", placeholder: "名前を入力", class: "form-control" %>
      </div>
    
      <div class="field", style="padding-top:20px;">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
      </div>
    
      <div class="field", style="padding-top:20px;">
        <%= f.label "パスワード" %><br />
        <% if @minimum_password_length %>
        <b>(<%= @minimum_password_length %>文字以上入力してください)</b>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力", class: "form-control" %>
      </div>
    
      <div class="field", style="padding-top:20px;">
        <%= f.label "パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを再度入力", class: "form-control" %>
      </div>
    
      <div class="actions", style="padding-top:20px;">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
<div class="text-right text-primary", style="padding-right:100px; padding-bottom:70px;">
  <h5><b>会員登録がお済みの方はこちらへ</b>
    <i class="fas fa-hand-point-right"></i>
    <%= render "public/shared/links" %>
  </h5>
</div>