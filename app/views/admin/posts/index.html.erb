<div style="padding-top:120px; padding-bottom:70px;">
  <h2>投稿一覧</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
      <th>ユーザー</th>
      <th>画像</th>
      <th>タイトル</th>
      <th>本文</th>
      <th>投稿日時</th>
      <th>投稿詳細へ</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <!--↑上記postsはrenderのインスタンス変数で対応、以下postは|post|によって対応-->
        <tr>
          <td>
            <%= link_to admin_user_path(post.user) do %>
              <%= image_tag post.user.get_profile_image, size:'50x50' %>
            <% end %>
          </td>
          <td>
            <% if post.images.attached? %>
              <% post.images.each_with_index do |image, i| %>
                <%= image_tag post.get_image[i], size:'50x50' %>
              <% end %>
            <% end %>
          </td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= link_to "show", admin_post_path(post) %></td>
        </tr>
        <tr>

        </tr>
      <% end %>
      <%= paginate @posts %>
    </tbody>
  </table>
</div>